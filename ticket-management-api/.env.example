# Application Environment
# Options: development, production
NODE_ENV=development

# Server Configuration
# Port on which the application will run
PORT=3000

# Database Configuration
# SQLite database file path
DB_DATABASE=database.sqlite

# TypeORM Configuration
# Auto-sync database schema (true for development, false for production)
# WARNING: Set to false in production to prevent data loss
DB_SYNCHRONIZE=true

# Note: Authentication is handled via Account SID and API Keys stored in the database
# Use the seed script to create test accounts: npm run seed:account
# Or create accounts programmatically using AuthService.createAccountWithApiKey()
